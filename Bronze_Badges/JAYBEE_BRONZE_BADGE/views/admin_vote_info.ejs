<script>
    var chat_time=document.getElementsByClassName("chat-time")
      function change_time(time){
            objToday=new Date(time)
            curYear = objToday.getFullYear(),
			curHour = objToday.getHours() > 12 ? objToday.getHours() - 12 : (objToday.getHours() < 10 ? "0" + objToday.getHours() : objToday.getHours()),
			curMinute = objToday.getMinutes() < 10 ? "0" + objToday.getMinutes() : objToday.getMinutes(),
			curSeconds = objToday.getSeconds() < 10 ? "0" + objToday.getSeconds() : objToday.getSeconds(),
			curMeridiem = objToday.getHours() > 12 ? "PM" : "AM";
            var now = objToday.getDate() + "/" + (objToday.getMonth()+1) + "/" + curYear + "," + curHour + ":" + curMinute + " " + curMeridiem + "." ;
            return now
        }
        chat_time_array=Array.from(chat_time)
        chat_time_array.forEach(elements=>{
            now=change_time(elements.innerText)
            elements.innerText=now
        })
</script>